@model IEnumerable<expenseTracker.Models.Expense>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "CreateForUser")
</p>

    <div class="col-md-7">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAndTime)
                </th>
                <th></th>
            </tr>



            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAndTime)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "UpdateForUser", new { id = item.Id }) |
                        @Html.ActionLink("Details", "DetailsForUser", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteForUser", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>


        @Html.ActionLink("Back to List", "GetAllUsers", "Manage" )
    </div>
    
