<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .filter {
            margin-top: 10px;
            margin-left: 300px;
        }
    </style>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-1 logo-status"><span class="glyphicon glyphicon-star" style="font-size:2.0em;" aria-hidden="true"></span></div>
                
                <div class="col-md-6">
                    
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("My Profile", "Profile", "Home")</li>
                            <li>@Html.ActionLink("Expense", "Index", "Expense")</li>
                            <li>@Html.ActionLink("All Users", "GetAllUsers", "Manage")</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
