@model expenseTracker.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Roles)
        </dd>
    </dl>
</div>
@if (Request.IsAuthenticated && (User.IsInRole("moderator")|| User.IsInRole("admin")))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new {id = Model.Id}) |
        @Html.ActionLink("Back to list", "GetAllUsers")
    </p>
}

@if (Request.IsAuthenticated && User.IsInRole("user") && !User.IsInRole("moderator") && !User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new {id = Model.Id}) |
        @Html.ActionLink("Home", "Index", "Home")
    </p>
}